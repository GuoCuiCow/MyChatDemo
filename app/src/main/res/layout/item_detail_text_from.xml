<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_message_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        tools:text="9:00"
        />
    <ImageView
        android:id="@+id/iv_message_detail_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@+id/tv_message_detail_time"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_message_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_message_detail_icon"
        android:layout_alignTop="@+id/iv_message_detail_icon"
        tools:text="萌萌哒"
        />
    <TextView
        android:id="@+id/iv_message_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_message_detail_icon"
        android:layout_below="@+id/tv_message_detail_title"
        android:layout_marginTop="8dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/talk_bg"
        tools:text="萌萌哒萌萌哒萌萌哒萌萌哒萌萌哒萌萌哒萌萌哒"
        />

</RelativeLayout>